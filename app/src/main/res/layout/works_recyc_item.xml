<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="12dp"
            android:layout_height="wrap_content">



            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/works_studentimg"
                android:layout_width="40dp"
                app:riv_oval="true"
                android:scaleType="centerCrop"
                android:layout_height="40dp"
                android:src="@drawable/ic_launcher_background"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/works_studentname"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/home_masterwork_listitem_time"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:textColor="#999999"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="14dp"
                        android:textColor="#999999"
                        android:layout_width="wrap_content"
                        android:text="来自"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/works_listitem_from"
                        android:layout_width="wrap_content"
                        android:textSize="14dp"
                        android:textColor="#535353"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/home_masterwork_listitem_content"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/home_masterwork_listitem_contentintro"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/home_masterwork_listitem_introimg_group"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/home_masterwork_listitem_introimg"
                        android:layout_width="wrap_content"
                        android:maxWidth="236dp"
                        android:maxHeight="236dp"
                        android:scaleType="fitStart"
                        android:adjustViewBounds="true"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/works_audioimg"
                        android:layout_width="240dp"
                        android:src="@mipmap/play_music_bg"
                        android:layout_height="135dp" />



                    <LinearLayout
                        android:id="@+id/home_masterwork_listitem_video_gorpu"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:orientation="vertical"

                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="38dp"
                            android:src="@mipmap/play"
                            android:layout_height="38dp" />

                        <TextView
                            android:id="@+id/works_video_time"
                            android:layout_marginTop="10dp"
                            android:textSize="14dp"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp"
                    android:layout_height="wrap_content"

                    >

                    <TextView
                        android:id="@+id/home_masterwork_listitem_worktype"
                        android:textSize="10dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:background="#f6f6f6"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_height="1dp" />

        <RelativeLayout
            android:id="@+id/home_masterwork_listitem_teacher_group"
            android:layout_width="match_parent"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_height="wrap_content"

            >

            <ImageView
                android:layout_width="14dp"
                android:src="@mipmap/ping"
                android:layout_marginLeft="12dp"
                android:layout_height="14dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="13dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_height="wrap_content">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/works_teacherimg"
                    android:layout_width="40dp"
                    app:riv_oval="true"
                    android:scaleType="centerCrop"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_launcher_background"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/works_teachername"
                            android:textColor="#ec6d14"
                            android:textSize="16dp"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:id="@+id/home_masterwork_listitem_teacherlevel"
                            android:layout_width="22dp"
                            android:layout_height="22dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/works_teacherintro"
                        android:textSize="14dp"
                        android:textColor="#999999"
                        android:layout_marginTop="3dp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_masterwork_listview_item_peep"
                android:layout_width="100dp"
                android:background="@drawable/look_group_bg"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginRight="12dp"
                android:layout_height="32dp">

                <TextView
                    android:id="@+id/home_masterwork_listview_item_peep_price"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="16dp"
                    android:src="@mipmap/play_small"
                    android:layout_marginLeft="6dp"
                    android:layout_height="16dp" />

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/home_masterwork_listitem_teacher_group_line"
            android:layout_width="match_parent"
            android:background="#f6f6f6"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp">

            <LinearLayout
                android:id="@+id/home_masterwork_list_item_reply_group"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">

                <CheckBox
                    android:id="@+id/home_masterwork_list_item_reply_cb"
                    android:layout_width="wrap_content"
                    android:button="@drawable/reply_check_bg"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:paddingLeft="8dp" />
                <TextView
                    android:id="@+id/works_xinxi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/home_masterwork_list_item_praise_group"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">

                <CheckBox
                    android:id="@+id/home_masterwork_list_item_praise_cb"
                    android:layout_width="wrap_content"
                    android:button="@drawable/praise_check_bg"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:paddingLeft="8dp"
                    android:textColor="@drawable/praise_check_tv_bg"/>
                <TextView
                    android:id="@+id/works_dianzan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/home_masterwork_list_item_reward_group"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="visible"
                android:layout_height="match_parent">

                <CheckBox
                    android:id="@+id/home_masterwork_list_item_reward_cb"
                    android:layout_width="wrap_content"
                    android:button="@drawable/reward_check_bg"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:paddingLeft="8dp"
                    />
                <TextView
                    android:id="@+id/works_liwu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_masterwork_list_item_share"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@mipmap/zhuanfa"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#eeeeee"
            android:layout_height="10dp">
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
