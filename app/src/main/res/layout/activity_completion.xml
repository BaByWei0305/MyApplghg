<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.activity.CompletionActivity"
    android:orientation="vertical"
    android:background="#f2f2f2">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fffffb">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完善信息"
            android:layout_marginLeft="100dp"/>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center">
        <ImageView
            android:id="@+id/img_touxaing"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/tou"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/edit_item"
            android:layout_margin="30dp"
            android:hint="昵称"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_nan"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="男"
                android:gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp"
                android:background="#fffffb"/>
            <TextView
                android:id="@+id/tv_nv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="女"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:background="#fffffb"/>
        </LinearLayout>
        <EditText
            android:id="@+id/edit_mima"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_margin="30dp"
            android:background="@drawable/edit_item"
            android:hint="密码"/>
    </LinearLayout>
    <TextView
        android:id="@+id/text_wancheng"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="完成"
        android:textColor="#fffffb"
        android:gravity="center"
        android:background="@drawable/text_item"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"/>

</LinearLayout>