<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5"
    tools:context=".UI.main.view.activity.FabuActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/mTool_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布课程作品"
            android:textSize="15sp"
            android:textColor="#5490fe"
            />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/center_container"
        android:background="#fdfdfe"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="10dp"
            android:textColor="#1b1a1a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专业:"
            android:layout_marginTop="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/center_container"
        android:background="#fdfdfe"
        android:orientation="horizontal"
        >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:textColor="#1b1a1a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="名师:"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:layout_marginTop="15dp"
                    android:id="@+id/tv1_6"
                    android:layout_marginLeft="250dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="不指定"
                    />
                <ImageView
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="7dp"
                    android:layout_width="10dp"
                    android:layout_height="15dp"
                    android:background="@mipmap/home_myself_right_arrow"/>
            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/center_container"
        android:background="#fdfdfe"
        android:orientation="horizontal"
        >
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="作品:"
                android:textColor="#1b1a1a"
                android:layout_marginLeft="10dp"
                />
        </FrameLayout>
        <FrameLayout
            android:layout_marginLeft="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/mImg1_14"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@mipmap/publishwok_add"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="添加视频/音频/图片"/>
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/center_container"
        android:background="#fdfdfe"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入作品内容:"
            android:layout_marginTop="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/center_container"
        android:background="#fdfdfe"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mTv1_1"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="对所有人公开"
                android:textColor="#5490fe"
                android:layout_marginTop="15dp"/>

            <ImageView
                android:layout_marginLeft="6dp"
                android:layout_marginTop="17dp"
                android:layout_width="15dp"
                android:layout_height="10dp"
                android:background="@mipmap/publishwok_up_arrow"/>

            <TextView
                android:layout_marginLeft="170dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="费用￥0.1"
                android:textColor="#efc83d"
                android:layout_marginTop="15dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/mBut1_1"
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5490fe"
            android:textColor="#ffffff"
            android:text="提交"/>
    </LinearLayout>

</LinearLayout>
