<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.activity.LoginActivity"
    android:orientation="vertical"
    android:background="#0fcccc">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:text="关闭"
            android:textSize="15sp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp" />

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="15dp"
            android:text="注册"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">
        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/yuan"
            android:layout_gravity="center"
            android:hint="输入手机号"
            android:layout_margin="30dp"/>
        <EditText
            android:id="@+id/edit_password"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/yuan"
            android:layout_gravity="center"
            android:hint="输入密码"
            />
        <Button
            android:id="@+id/ton_login"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/ton_item"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:text="登录"
            android:textColor="#fffffb"/>
        <TextView
            android:id="@+id/forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码?"
            android:layout_marginLeft="50dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp">
            <ImageView
                android:id="@+id/img_weixin"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/weixin"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="微信登录"
                android:gravity="center"
                android:textSize="11dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_qq"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/qq"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="QQ登录"
                android:gravity="center"
                android:textSize="11dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_weibo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/weibo"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="微博登录"
                android:gravity="center"
                android:textSize="11dp"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>