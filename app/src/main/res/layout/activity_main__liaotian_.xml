<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.main.view.fragment.Xingqu_activity.Main_Liaotian_Activity"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/main_liaotianrelative"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="44dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/masterlist_title_cancle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/register_return"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="作品详情"
            style="@style/listui_title_style"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/valuable_detail_aty_more"
            android:layout_width="22dp"
            android:src="@mipmap/more"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_height="22dp" />
    </RelativeLayout>
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/main_liaotian_scrollview"
        android:layout_below="@+id/main_liaotianrelative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingTop="15dp"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="12dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white">



                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/works_studentimg"
                        android:layout_width="40dp"
                        app:riv_oval="true"
                        android:scaleType="centerCrop"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_launcher_background"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/works_studentname"
                            android:textSize="16dp"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="6dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/home_masterwork_listitem_time"
                                android:textSize="14dp"
                                android:layout_width="wrap_content"
                                android:textColor="#999999"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:textSize="14dp"
                                android:textColor="#999999"
                                android:layout_width="wrap_content"
                                android:text="         "
                                android:layout_marginLeft="10dp"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/works_listitem_from"
                                android:layout_width="wrap_content"
                                android:textSize="14dp"
                                android:textColor="#535353"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="16dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/home_masterwork_listitem_content"
                                android:textSize="18dp"
                                android:layout_width="wrap_content"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/home_masterwork_listitem_contentintro"
                                android:textSize="18dp"
                                android:layout_width="wrap_content"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content" />


                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/home_masterwork_listitem_introimg_group"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content" >



                            <ImageView
                                android:id="@+id/works_audioimg"
                                android:layout_width="240dp"
                                android:src="@mipmap/play_music_bg"
                                android:layout_height="135dp" />



                            <LinearLayout
                                android:id="@+id/home_masterwork_listitem_video_gorpu"
                                android:layout_width="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_centerInParent="true"
                                android:orientation="vertical"

                                android:layout_height="wrap_content">

                                <ImageView

                                    android:layout_width="38dp"
                                    android:src="@mipmap/play"
                                    android:layout_height="38dp" />

                                <TextView
                                    android:id="@+id/works_video_time"
                                    android:layout_marginTop="10dp"
                                    android:textSize="14dp"
                                    android:textColor="@color/white"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                        </RelativeLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="8dp"
                            android:layout_height="wrap_content"

                            >

                            <TextView
                                android:id="@+id/home_masterwork_listitem_worktype"
                                android:textSize="10dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="3dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="8dp"
                    android:background="#f6f6f6"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_height="1dp" />

                <RelativeLayout
                    android:id="@+id/home_masterwork_listitem_teacher_group"
                    android:layout_width="match_parent"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <ImageView
                        android:layout_width="14dp"
                        android:src="@mipmap/ping"
                        android:layout_marginLeft="12dp"
                        android:layout_height="14dp" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="13dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:layout_height="wrap_content">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/works_teacherimg"
                            android:layout_width="40dp"
                            app:riv_oval="true"
                            android:scaleType="centerCrop"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_launcher_background"/>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/works_teachername"
                                    android:textColor="#ec6d14"
                                    android:textSize="16dp"
                                    android:singleLine="true"
                                    android:ellipsize="end"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <ImageView
                                    android:id="@+id/home_masterwork_listitem_teacherlevel"
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:src="@mipmap/ic_launcher"/>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/works_teacherintro"
                                android:textSize="14dp"
                                android:textColor="#999999"
                                android:layout_marginTop="3dp"
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:layout_width="160dp"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/home_masterwork_listview_item_peep"
                        android:layout_width="100dp"
                        android:background="@drawable/look_group_bg"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginRight="12dp"
                        android:layout_height="32dp">

                        <TextView
                            android:id="@+id/home_masterwork_listview_item_peep_price"
                            android:layout_width="wrap_content"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:layout_width="16dp"
                            android:src="@mipmap/play_small"
                            android:layout_marginLeft="6dp"
                            android:layout_height="16dp" />

                    </LinearLayout>

                </RelativeLayout>

                <TextView
                    android:id="@+id/home_masterwork_listitem_teacher_group_line"
                    android:layout_width="match_parent"
                    android:background="#f6f6f6"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:background="#eeeeee"
                    android:layout_height="10dp">
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="赞赏"
                    android:textColor="@color/white"
                    android:background="@drawable/text_zansahng_item"
                    android:gravity="center"/>
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/main_liaotian_img"
                    android:layout_width="40dp"
                    app:riv_oval="true"
                    android:scaleType="centerCrop"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_launcher_background"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="140dp"
                        android:text="/"
                        android:textColor="#f15a22"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="140dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="热门评论" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="140dp"
                        android:text="/"
                        android:textColor="#f15a22"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="140dp" />
                </RelativeLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/main_liaotian_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false">

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/main_liaotian_mlayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:background="@color/white"
        android:visibility="gone">

        <Button
            android:id="@+id/wok_detail_comment_aty_pinglun_send"
            android:layout_width="80dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@color/blue_arlt"
            android:gravity="center"
            android:text="发送"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/wok_detail_comment_aty_pinglun_input"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/wok_detail_comment_aty_pinglun_send"
            android:background="@drawable/button_white_bg"
            android:hint="说点什么..."
            android:maxLength="250"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="14dp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/main_liaotian_layout"
        android:layout_width="match_parent"
        android:background="@color/gray_fa"
        android:visibility="visible"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true">


        <RelativeLayout
            android:id="@+id/wok_detail_aty_input_group"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/wok_detail_aty_input_btn"
                android:layout_width="200dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:background="@drawable/home_search_bg"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="写评论" />


            <RelativeLayout
                android:id="@+id/wok_detail_aty_praise_group"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/wok_detail_aty_praise_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/work_detail_praise_bg" />

                <TextView
                    android:id="@+id/wok_detail_aty_praise_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="-6dp"
                    android:layout_toRightOf="@id/wok_detail_aty_praise_btn"
                    android:text="0"
                    android:textColor="@color/blue_arlt"
                    android:textSize="12dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/wok_detail_aty_comment_group"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@id/wok_detail_aty_praise_group"
                android:gravity="center"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/wok_detail_aty_comment_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/work_detail_comment" />

                <TextView
                    android:id="@+id/wok_detail_aty_comment_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="-8dp"
                    android:layout_marginTop="-5dp"
                    android:layout_toRightOf="@id/wok_detail_aty_comment_btn"
                    android:text="0"
                    android:textColor="@color/blue_arlt"
                    android:textSize="12dp" />

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>